<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Sonaar.Mobile.Models.Sale;assembly=Sonaar.Mobile.Models"
             x:Class="Sonaar.Mobile.UI.QuickSale.AddSaleItemView">
    <ContentView.Content>
        <VerticalStackLayout x:DataType="model:SaleModel">
                <Label Text="Description" />
                <Entry Text="{Binding Description}" />

                <Label Text="HSN Code"/>
                <Entry Text="{Binding HSN_Code}"/>

                <Label Text="Purity"/>
                <Entry Text="{Binding Purity}"/>

                <Label Text="Weight"/>
                <Entry Text="{Binding Weight}" Keyboard="Numeric"/>

                <Label Text="Rate" />
                <Entry Text="{Binding Rate}" />

                <Label Text="Making_Charge"/>
                <Entry Text="{Binding Making_Charge}" />

                <Label Text="{Binding Amount}" />
                <Label Text="{Binding Amount}" />
        </VerticalStackLayout>
    </ContentView.Content>
</ContentView>

